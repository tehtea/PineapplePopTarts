<html>

    <head>
        <title>CMS Login</title>
        <meta http-equiv="content-type" content="text/html;charset=utf-8" />
        <meta name="generator" content="Geany 1.32" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.2.0/socket.io.js"></script>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
        <link href="../CSS/Header.css" rel="Stylesheet" style="text/css">
        <link href="../CSS/Login.css" rel="Stylesheet" style="text/css">
        
    </head>

    <body>

        <% include partials/header %>

        <div id="no-log-display">
            <img class="logo" src="../IMG/pineapple.jpg" style="padding-top: 25px"><br>
            
            <!--Login textbox-->
            <div class="loginDiv">
                <br>
                <p class="loginTitle">Crisis Management System</h1> <br><br>
                
                <form  class="loginDiv-2" name="loginForm" onsubmit="return validateForm()" action="accountView" method="post">
                    <input class="loginInput" type="text" name="userid" placeholder="Username"> <br><br>
                    
                    <input class="loginInput" type="password" name="pw" placeholder="Password"> <br><br>
                    
                    <input class="sButton" type="submit" value="Log In">
                    <p id="errorMsg"><br><%= message %></p> <br>
                </form>	
            </div>
        </div>

    </body>

    <script>
        function validateForm() {
            if (!document.forms["loginForm"]["userid"].value) {
                if (!document.forms["loginForm"]["pw"].value)
                    document.getElementById("errorMsg").innerHTML = '<br>*username and password missing';
                else
                    document.getElementById("errorMsg").innerHTML = '<br>*username missing';
                return false;
            } else if (!document.forms["loginForm"]["pw"].value) {
                document.getElementById("errorMsg").innerHTML = '<br>*password missing';
                return false;
            }
            return true;
        }
    </script>

</html>